{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"baseUrl": "",
		"paths": {
			"@api": ["api"],
			"@component": ["component"],
			"@component/*": ["component/*"],
			"@context/*": ["context/*"],
			"@img": ["asset/img"],
			"@style/*": ["style/*"],
			"@util": ["util"],
			"@util/*": ["util/*"],
			"@hook": ["hook"],
			"@type": ["type"],
			"@type/*": ["type/*"],
			"@db": ["db"],
			"@model": ["model"]
		},
		"jsx": "preserve",
		"strictFunctionTypes": true
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
